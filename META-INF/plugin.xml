<idea-plugin version="2">
  <id>zjhmale.rainbow</id>
  <name>Rainbow Identifier</name>
  <version>1.1</version>
  <vendor email="zjhmale@gmail.com" url="https://github.com/zjhmale">zjhmale</vendor>

  <description><![CDATA[
      <strong>Rainbow identifier highlighting for IntelliJ IDEA-based IDEs</strong>
    ]]></description>

  <change-notes><![CDATA[
      <p>1.1:</p>
      <ul>
        <li>Support for Kotlin, Python, Haskell and Agda Programming Language</li>
      </ul>
      <p>1.0:</p>
      <ul>
        <li>Support for Java and Clojure Programming Language</li>
      </ul>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <annotator language="Clojure" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>
    <annotator language="JAVA" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>
    <annotator language="kotlin" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>
    <annotator language="Python" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>
    <annotator language="Haskell" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>
    <annotator language="Agda" implementationClass="zjhmale.rainbow.RainbowIdentifierHighliter"/>

    <applicationConfigurable implementation="zjhmale.rainbow.setting.RainbowIdentifierConfigurable"/>
    <applicationService serviceInterface="zjhmale.rainbow.setting.RainbowIdentifierSettings"
                        serviceImplementation="zjhmale.rainbow.setting.RainbowIdentifierSettings"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>